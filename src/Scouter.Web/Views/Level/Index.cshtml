@model IEnumerable<LevelViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Level</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">              
                <div class="ibox-title">
                    <a asp-action="Create" class="btn btn-primary">Novo</a>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped dataTables-full">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.LevelName)</th>
                                    <th>@Html.DisplayNameFor(model => model.LevelNameNote)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.LevelName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.LevelNameNote)</td>

                                            <td class="text-center">
                                                <button class="btn btn-outline btn-success" title="Editar" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'"><i class="fa fa-edit"></i></button>
                                                <button class="btn btn-outline btn-danger" title="Remover" onclick="DeletarRegistro(@item.Id,'/Level/Delete', RenderBodyAjax)"><i class="fa fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
